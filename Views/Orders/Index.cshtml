@using System.Configuration;
@{
    ViewBag.Title = "Orders";
}

<div class="container">
    @if (User.IsInRole(ConfigurationManager.AppSettings["RoleAdmin"]))
    {
        <hr />
        <h3>Orders</h3>
        <hr />
        <table id="orders-table" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Delivery Address</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr id="order-data-row" class="d-none" data-id="">
                    <td id="name"></td>
                    <td id="date"></td>
                    <td id="address"></td>
                    <td id="status"></td>
                    <td id="action"><button class="btn btn-primary btn-sm mx-2">Details</button><a href="#" class="btn btn-success btn-sm">Mark Delivered</a></td>
                </tr>
            </tbody>
        </table>

        <!-- order-details -->
        <div class="modal" id="modal-order-details" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Your Order Preview</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-sm" id="table-cart">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total-Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="order-item-row" class="d-none">
                                    <td id="name"></td>
                                    <td id="qty"></td>
                                    <td id="total-price"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="d-flex flex-row justify-content-end">
                            <p class="d-inline-block font-weight-bold">Grand Total:</p>
                            <p class="d-inline-block ml-3" id="grand-total"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (User.IsInRole(ConfigurationManager.AppSettings["RoleCustomer"]))
    {
        <hr />
        <h3>My Orders</h3>
        <hr />
        <table id="orders-table" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <tr id="order-data-row" class="d-none" data-id="">
                    <td id="date">1234asd</td>
                    <td id="amount">1234asd</td>
                    <td id="status">1234asd</td>
                </tr>
            </tbody>
        </table>

        <!-- order-details -->
        <div class="modal" id="modal-order-details" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Your Order Preview</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-sm" id="table-cart">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total-Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="order-item-row" class="d-none">
                                    <td id="name"></td>
                                    <td id="qty"></td>
                                    <td id="total-price"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="d-flex flex-row justify-content-end">
                            <p class="d-inline-block font-weight-bold">Grand Total:</p>
                            <p class="d-inline-block ml-3" id="grand-total"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts{
    @if (User.IsInRole(ConfigurationManager.AppSettings["RoleAdmin"]))
    {
        <script src="~/Scripts/app.orders.admin.index.js"></script>
    }
    @if (User.IsInRole(ConfigurationManager.AppSettings["RoleCustomer"]))
    {
        <script src="~/Scripts/app.orders.customer.index.js"></script>
    }
}