@{
    ViewBag.Title = "Index";
}

<div class="container">
    <hr />
    <h3>Items</h3>
    <hr />
    <table id="items-table" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Available</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr id="item-row" class="d-none">
                <th id="count" scope="row"></th>
                <td id="name"></td>
                <td id="price"></td>
                <td id="avail"></td>
                <td>
                    <!-- View Modal Button trigger -->
                    <button id="view-modal-button" type="button" class="btn btn-outline-info btn-sm" data-toggle="modal" data-id="" data-target="#view-modal">View</button>

                    <!-- Edit Modal Button trigger -->
                    <button id="edit-modal-button" type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-id="" data-target="#edit-modal">Edit</button>

                    <a class="btn btn-outline-danger btn-sm" href="#" id="delete">DELETE</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- View Modal -->
<div class="modal fade" id="view-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <img class="w-100 h-auto" src="~/" alt="Item Image" />
                <div class="d-flex justify-content-between p-3"><h4 id="item-name">ITEM</h4><p id="price-modal" class="pr-3">PRICE</p></div>
                <hr />
                <p class="p-3" style="font-size: 18px" id="desc-p"></p>
            </div>
            <div class="modal-footer mr-auto">
                <button type="button" class="btn btn-info btn-sm">Save changes</button>
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Edit Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modal-title" class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/items/updateitem" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="number" class="form-control" name="Price" id="Price" min="0" step="0.1" required />
                    </div>

                    <div class="form-check">
                        @*<input type="checkbox" class="form-check-input" data-val="" name="IsAvailable" checked="" id="IsAvailable">*@
                        <input class="check-box" data-val="true" id="IsAvailable" name="IsAvailable" type="checkbox" value="true">
                        <label class="form-check-label" for="IsAvailable">Available</label>
                    </div>
                    <input type="text" name="Id" id="item-id" hidden value="" />
                    <hr />
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/app.items.index.js">
        

    </script>
}